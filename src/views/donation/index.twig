{% do view.registerAssetBundle('endurant\\donationsfree\\DonationsFreeAssetBundle') -%}

<html xmlns="http://www.w3.org/1999/xhtml" lang="en-US">
<head>{% block head %}{% endblock %}</head>
<body>
<div class="overlay">
</div>
<div class="checkout-panel">
    <div class="panel-body">
        <div class="panel-body-header">
            <h2 class="title">Checkout</h2>
            <div class="amount">
                <h2 id="amount" class="amount">50$</h2>
                <input type="number" class="edit-amount-input hidden" name="amount" value="50" />
                <img id="edit-btn" class="edit-btn" src="https://i.imgur.com/ILbGByI.png" />
                <img id="ok-btn" class="edit-btn hidden" src="https://i.imgur.com/ILbGByI.png" />
                <img id="cancel-btn" class="edit-btn hidden" src="https://i.imgur.com/ILbGByI.png" />
            </div>
        </div>
        <div class="progress-bar">
            <div class="step"></div>
            <div class="step"></div>
            <div class="step"></div>
            <div class="step"></div>
        </div>

        <form id="payForm" action="">

            <div class="tab">
                <div class="input-fields">
                    <div class="column-1">
                        <label for="firstName">First Name <span class="required">*</span></label>
                        <input type="text" id="firstName" class="input" tabindex=1 required value="das"/>
                        <label for="email">Email <span class="required">*</span></label>
                        <input type="email" id="email" class="input" tabindex=3 required value="das@sad.com"/>
                    </div>
                    <div class="column-2">
                        <label for="lastName">Last Name <span class="required">*</span></label>
                        <input type="text" id="lastName" class="input" tabindex=2 required value="das"/>
                        <label for="phone">Phone <span class="required">*</span></label>
                        <input type="text" id="phone" class="input" tabindex=4 required value="das"/>
                    </div>
                </div>
            </div>

            <div class="tab">
                <div class="input-fields">
                    <div class="column-1">
                        <label for="firstName">Country</label>
                        <select id="country" class="input">
                            <option value="USA">USA</option>
                            <option value="Ukraine">Ukraine</option>
                        </select>
                        <label for="email">City</label>
                        <input type="email" id="city" class="input" />
                        <label for="email">Extended Address</label>
                        <input type="email" id="extendedAddress" class="input" />
                    </div>
                    <div class="column-2">
                        <label for="lastName">State / Province</label>
                        <select id="state-select" class="input">
                            <option value="volvo">Washington</option>
                            <option value="saab">Colorado</option>
                        </select>
                        <input id="state-input" type="text" class="input hidden" name="state" />
                        <label for="phone">Address</label>
                        <input type="text" id="address" class="input" />
                        <label for="email">Zip</label>
                        <input type="email" id="zip" class="input" />
                    </div>
                </div>
            </div>

            <div class="tab">
                <div id="dropin-container"></div>
                <input type="hidden" id="nonce" display="none" />
            </div>

            <div class="tab">
                <label for="note">Note</label>
                <textarea placeholder="Please write down your notes..."></textarea>
            </div>

        </form>
        <div class="panel-footer">
            <button type="button" class="btn back-btn">Back</button>
            <button type="button" class="btn next-btn">Next Step</button>
        </div>
    </div>
</div>
</body>
</html>